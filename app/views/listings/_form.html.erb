  <h2><%= t(".title") %></h2>
  <%= form_for @listing do |form| %>

  <div class="control is-vertical">
    <%= form.label :Title, class:"label" %>
    <%= form.text_field :title, placeholder: "Enter Title", class: "input is-big", id: "title" %>



    <%= form.label :Location, class:"label" %>
    <%= form.text_field :location, placeholder: "Enter Location", class: "input is-grouped", id: "location" %>

  </div>

  <div class="control">
    <%= form.label :Description %>
    <%= form.text_area :description, placeholder: "Enter description", class: "textarea", id: "description" %>
  </div>

  <div class="form-group">
    <%= form.label :nb_rooms %>
    <%= form.text_field :nb_rooms, class: "form-control", id: "nb_rooms" %>
  </div>  


  <div class="form-group">
    <%= form.label "Price per night" %>
    <%= form.text_field :price_per_night, class: "form-control", id: "price_per_night" %>
  </div>

<hr>

  <div class="form-group">
    <%= form.label "Smokers friendly" %>
    <%= form.check_box :isSmoker, class: "form-control", id: "issmoker" %> |
  
 
    <%= form.label "We accept pets" %>
    <%= form.check_box :isPetFriendly, class: "form-control", id: "ispetfriendly" %> 
 

   <%= form.label "Allow check out at 2pm" %> 
    <%= form.check_box :hasLatecheckout, class: "form-control", id: "haslatecheckout" %> |
  
 
    <%= form.label "Kitchen + appliances" %>
    <%= form.check_box :hasKitchen, class: "form-control", id: "haskitchen" %> |
  

    <%= form.label "Wifi available" %>
    <%= form.check_box :hasWifi, class: "form-control", id: "haswifi" %> |


    <%= form.label "Swimming Pool" %>
    <%= form.check_box :hasSwimmingPool, class: "form-control", id: "hasswimmingpool" %>

    <%= form.label :tag_list %>
    <%= form.text_field :tag_list %>
  
  <br>

    <%= form.file_field :avatars, multiple: true %>
  </div>

    <div class="submit-field">
      <%= form.submit %>
    </div>
  <% end %>


  </div>

