<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
    <%if @listing.avatars.present? %>
        <%= image_tag (@listing.avatars[0].large.url) %>
        <%end%>
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-32x32">
    <%if @listing.avatars.present? %>        
        <%= image_tag (@listing.avatars[0].large.url) %>
    <%end%>        
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-5"><%= @listing.title %></p>
        <p class="subtitle is-6"><%= @listing.location %></p>
      </div>
    </div>

    <div class="content">
      <%= @listing.description %><a href="#"><%= @listing.id %></a>.
      <a href="#"><%= @listing.nb_rooms %> rooms</a> <a href="#">#responsive</a>
      <br>
      <small>11:09 PM - 1 Jan 2016</small>
    </div>
  </div>
</div>
<p><a href="/users/<%= @listing.user_id %>">Back to User's Profile</a></p>
    <% if  @listing.user_id == current_user.id%>
      <form action="listings#update" method="put"><a href="/listings/<%= @listing.id %>/edit" class="button is-warning">Edit</a></form>
      <form action="listings#destroy" method="delete"><a href="/listings/<%= @listing.id %>" class="button is-danger">Delete</a></form>
    <% end %>
 
