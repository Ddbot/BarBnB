


<!-- NEW FORM -->

  <%= form_for @user do |form| %>

  <div class="text-field control is-vertical">
    <%= form.label :email, class:"label" %>
    <%= form.text_field :email, placeholder: "Enter Email", class: "input is-big", id: "title" %>



    <%= form.label :firstname, class:"label" %>
    <%= form.text_field :firstname, placeholder: "Enter First Name", class: "input is-grouped", id: "firstname" %>

  </div>

  <div class="control">
    <%= form.label :lastname %>
    <%= form.text_area :lastname, placeholder: "Enter Last Name", class: "input is-grouped", id: "lastname" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", id: "password" %>
  </div>  


  <div class="form-group">
    <%= form.label "Avatar" %>
    <%= form.file_field :avatars, id: "avatar" %>
  </div>

<hr>
 
   <div class="submit-field">
      <%= form.submit %>
    </div>
  <% end %>





